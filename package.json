{
  "name": "fed-monorepo",
  "private": true,
  "packageManager": "pnpm@10.10.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "native": "cd apps/mobile && pnpm start",
    "web": "cd apps/web && pnpm dev",
    "storybook": "cd packages/ui && pnpm storybook",
    "build-storybook": "cd packages/ui && pnpm build-storybook",
    "ui": "cd packages/ui && pnpm dev",
    "start": "pnpm dev",
    "postinstall": "turbo prune --scope=web --docker"
  },
  "dependencies": {
    "framer-motion": "11.0.17",
    "next": "^15.3.2",
    "next-themes": "^0.4.6",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-native-web": "0.20.0",
    "sonner": "^2.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "@types/react": "^18.2.21",
    "eslint": "^8.57.1",
    "eslint-config-next": "^15.3.1",
    "turbo": "^2.5.3",
    "typescript": "^5.2.2"
  },
  "eslintConfig": {
    "extends": "next",
    "settings": {
      "next": {
        "rootDir": "apps/web/"
      }
    },
    "root": true
  },
  "prettier": {
    "semi": false,
    "useTabs": false,
    "tabWidth": 2,
    "singleQuote": true
  },
  "overrides": {
    "react": "18.2.0",
    "react-dom": "18.2.0"
  }
}
